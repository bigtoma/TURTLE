<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/h_back"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="-150dp"
        android:contentDescription="@null" />

    <com.team9.admin.turtle001.Fragment_main.PullScrollView
        android:id="@+id/pullscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="55dp"
        app:headerHeight="500dp"
        app:headerTopHeight="100dp"
        app:headerVisibleHeight="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp">

                <ImageView
                    android:id="@+id/h_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/h_head"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/user_line"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/white" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/user_line"
                        android:text="Turtle"
                        android:textColor="@android:color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/user_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/user_line"
                        android:text="TODO"
                        android:textColor="@android:color/white"
                        android:textSize="17sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/scroll_view_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.team9.admin.turtle001.Fragment_main.ItemView
                        android:id="@+id/nickName"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:left_icon="@drawable/ic_nick_name"
                        app:left_text="用户名"
                        app:right_text="GOD" />

                    <com.team9.admin.turtle001.Fragment_main.ItemView
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:left_icon="@drawable/ic_sex"
                        app:left_text="性别"
                        app:right_text="男" />

                    <com.team9.admin.turtle001.Fragment_main.ItemView
                        android:id="@+id/signName"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:left_icon="@drawable/ic_sign_name"
                        app:left_text="个性签名"
                        app:right_text="风一样的男子" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@color/colorLine"
                        android:textColor="@color/colorLine" />

                    <com.team9.admin.turtle001.Fragment_main.ItemView
                        android:id="@+id/rebort"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:left_icon="@drawable/ic_rebort"
                        app:left_text="我的小T"
                        app:right_text="(*_*)" >


                    </com.team9.admin.turtle001.Fragment_main.ItemView>
                    <com.team9.admin.turtle001.Fragment_main.ItemView
                        android:id="@+id/diary_cell"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:left_icon="@drawable/ic_historyd"
                        app:left_text="我的日迹"
                        app:right_text="" />
                    <com.team9.admin.turtle001.Fragment_main.ItemView
                        android:id="@+id/history"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:left_icon="@drawable/ic_history"
                        app:left_text="心情记录"
                        app:right_text="" />

                    <com.team9.admin.turtle001.Fragment_main.ItemView
                        android:id="@+id/me"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:left_icon="@drawable/ic_me"
                        app:left_text="认识自我"
                        app:right_text="" />

                    <com.team9.admin.turtle001.Fragment_main.ItemView
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:left_icon="@drawable/ic_consults"
                        app:left_text="寻求帮助"
                        app:right_text="" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@color/colorLine"
                        android:textColor="@color/colorLine" />

                    <com.team9.admin.turtle001.Fragment_main.ItemView
                        android:id="@+id/update"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:left_icon="@drawable/ic_update"
                        app:left_text="检查更新"
                        app:right_text=""/>

                    <com.team9.admin.turtle001.Fragment_main.ItemView
                        android:id="@+id/about"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        app:left_icon="@drawable/ic_about"
                        app:left_text="关于"
                        app:right_text="">

                    </com.team9.admin.turtle001.Fragment_main.ItemView>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.team9.admin.turtle001.Fragment_main.PullScrollView>

</RelativeLayout>